<!DOCTYPE html>
<html>
    <head>
        <title><%= subTitle %></title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <h1><%= title %></h1>
        <h3>Hello, <%= user.username %> !</h3>
        <ul id="message-list">
            <% messages.forEach((message, index) => { %>
                    <%- include('partials/posts', {message:message, index: index, user: user}) %>
           <% }) %>
        </ul>
        <a href="/add"><button> Add Post </button></a>
        <a href="/logout"><button> Log Out </button></a>
    </body>
</html>