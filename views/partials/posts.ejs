<li>
	<div>
		<span><%= message.message %></span>
	</div>
	<div>
        <% if(user === undefined || user.ismember != true) { %>
            <p>Anonymous</p>
       <% } else { %>
            <p><%= message.author %></p>
            <p><%= message.date_created %></p>
       <% } %>

		<% if (user != undefined && user.isadmin != false){ %>
		<form
			action="/delete/<%= message.id %>"
			method="POST"
		>
			<button
				type="submit"
				onclick="return confirm('Are you sure you want to delete this message?');"
			>
				Delete
			</button>
		</form>
		<% } %>
	</div>
</li>
