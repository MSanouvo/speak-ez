<li>
	<div>
		<span><%= message.message %></span>
	</div>
	<div>
		<% if (user.ismember != false) { %>
		    <p><%= message.author %></p>
		<% } else { %>
		    <p>Anonymous</p>
		<% } %>

		<span> <%= message.date_created %></span>

		<% if (user.isadmin != false){ %>
		<form
			action="/delete/<%= message.id %>"
			method="POST"
		>
			<button
				type="submit"
				onclick="return confirm('Are you sure you want to delete this message?');"
			>
				Delete
			</button>
		</form>
		<% } %>
	</div>
</li>
